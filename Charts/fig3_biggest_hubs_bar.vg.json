{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": { "text": "Flights in Hub Cities" },
    "data": {
        "url": "Data/location_data_cleaned.csv"
    },
    "transform": [
        {"filter": "(datum.Connections > 2)"}

    ],
    "mark": {"type": "bar"},
    "encoding": {
        "x": { "field": "Flights", "type": "quantitative"},
        "y": { "field": "City", "type": "nominal", "sort":"-y", "title":""},
        "color": {"field": "Class"}
    }
}
