{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": { "text": "Biggest Hubs Across the City" },
    "data": {
        "url": "Data/heatmap_data.csv"
    },

    "mark": {"type": "rect"},
    "encoding": {
        "x": { "field": "CityA", "type": "nominal", "sort":"-y"},
        "y": { "field": "CityB", "type": "nominal"},
        "color": {"field": "RouteExists", "type":"quantitative"}
    }
}
